<div class="col-xs-12 col-sm-6">
  <div class="well bs-component">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <fieldset>
      <legend><h2>Sign up</h2></legend>
        <div class="form-inputs">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">
              <i class="fa fa-user fa-fw"></i>
            </span>
            <%= f.input :first_name, required: true, autofocus: true, label: false, input_html: {class: "form-control", placeholder: "First Name"} %>
          </div>
          <br>
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">
              <i class="fa fa-user fa-fw"></i>
            </span>
            <%= f.input :last_name, required: true, label: false, input_html: {class: "form-control", placeholder: "Last Name"} %>
          </div>
          <br>
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">
              <i class="fa fa-user fa-fw"></i>
            </span>
            <%= f.input :username, required: true, label: false, input_html: {class: "form-control", placeholder: "User Name"} %>
          </div>
          <br>
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">
              <i class="fa fa-envelope-o fa-fw"></i>
            </span>
            <%= f.input :email, required: true, label: false, input_html: {class: "form-control", placeholder: "Email"} %>
          </div>
          <br>
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1">
                <i class="fa fa-key fa-fw"></i>
              </span>
              <%= f.input :password, required: true, label: false, input_html: {class: "form-control", placeholder: ("#{@minimum_password_length} characters minimum" if @validatable)} %>
            </div>
          <br>
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1">
                <i class="fa fa-key fa-fw"></i>
              </span>
              <%= f.input :password_confirmation, required: true, label: false, input_html: {class: "form-control", placeholder: "Password Confirmation"} %>
            </div>
        </div>
        <br>
        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
          <%= render "devise/shared/links" %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>