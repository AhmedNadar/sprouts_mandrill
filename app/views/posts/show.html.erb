<div class="col-xs-12 col-sm-6">

  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @post.content %>
  </p>

  <%= render  'comments/form' %>
  <%= render  @post.comments %>
  <br>
  <div class="form-actions">
    <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-warning", role: 'button' %>
    <%= link_to 'Back', posts_path, class: "btn btn-default", role: 'button' %>
  </div>
</div>